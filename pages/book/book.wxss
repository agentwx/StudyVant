/* pages/book/book.wxss */
.book_opear{
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.book_status{
  display: flex;
  width: 100%;
  flex-direction: row;
  border: 1px #f5f5f5 solid; 
}
.book_z{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.book_l{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.book_s{
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tag{
  margin-left: 16rpx
}

.line{
  margin-top: 16rpx;
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5
}
.short_info{
  padding: 16rpx;
}
.book_preview{
  display: flex;
  width: 100%;
  flex-direction: row;
}
.preview{
  width: 20%;
  margin: 16rpx;
  color: #999999
}
.more{
   margin: 16rpx;
   width: 80%;
   text-align: right;
   color: #999999
}
.preview_list{
  margin-top: 20rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
}
.avatar{
  margin-top: 36rpx;
  height: 100%;
  display: flex;
  justify-content: center;
}
.preview_avatar{
  margin: 16rpx;
  width: 108rpx;
  height: 108rpx;
  border-radius: 25px;
  display: flex;
  justify-content: center;
}
.preview_msg{
  display: flex;
  flex-direction: column;
}
.nickname{
  margin-top: 16rpx;
  font-size:18rpx;
  color: #ffe1a1;
}
.title{
  font-size:18rpx;
  color: #666666;
}
.content{
    width:100%;
    height:44rpx;
    color: #999999;
    font-size:15rpx;
    margin-right: 16rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    display:-webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.books_list{
  margin-top: 20rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
}
.book{
  height: 100%;
  display: flex;
  justify-content: center;
}
.books_cover{
  margin: 16rpx;
  width: 80rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
}
.books_msg{
  display: flex;
  flex-direction: column;
}
.title{
  margin-top: 16rpx;
  font-size:18rpx;
  color: #ffe1a1;
}
.nickname{
  font-size:18rpx;
}
.short{
    margin-top: 16rpx;
    width:100%;
    height:44rpx;
    font-size:15rpx;
    margin-right: 16rpx;
    overflow:hidden;
    text-overflow: ellipsis;
    display:-webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
